{
    "name": "@kdt310722/eslint-config",
    "type": "module",
    "version": "0.0.5",
    "packageManager": "pnpm@9.9.0",
    "description": "My personal ESLint config",
    "author": "Diep Dang <kdt310722@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/kdt310722/eslint-config",
    "repository": "github:kdt310722/eslint-config",
    "bugs": {
        "email": "kdt310722@gmail.com",
        "url": "https://github.com/kdt310722/eslint-config/issues"
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rimraf dist && tsup && tsc --project ./tsconfig.build.json",
        "release": "np --no-yarn --no-release-draft --yolo --message='chore: release v%s'",
        "up": "ncu -i",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "preinstall": "npx only-allow pnpm",
        "prepare": "simple-git-hooks && pnpm build",
        "prepublishOnly": "pnpm build"
    },
    "peerDependencies": {
        "eslint": ">=8.57.0"
    },
    "dependencies": {
        "@antfu/eslint-define-config": "1.23.0-2",
        "@antfu/install-pkg": "^0.4.1",
        "@eslint/js": "^8.57.0",
        "@stylistic/eslint-plugin": "^1.8.1",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "@typescript-eslint/utils": "^7.18.0",
        "@unocss/eslint-plugin": "^0.62.3",
        "astro-eslint-parser": "^0.17.0",
        "eslint-import-resolver-typescript": "^3.6.3",
        "eslint-merge-processors": "^0.1.0",
        "eslint-plugin-antfu": "^2.3.6",
        "eslint-plugin-astro": "^0.34.0",
        "eslint-plugin-deprecation": "^2.0.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-format": "^0.1.2",
        "eslint-plugin-i": "^2.29.1",
        "eslint-plugin-jsdoc": "^48.11.0",
        "eslint-plugin-jsonc": "^2.16.0",
        "eslint-plugin-markdown": "^3.0.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-perfectionist": "^2.11.0",
        "eslint-plugin-promise": "^6.6.0",
        "eslint-plugin-react": "^7.35.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.11",
        "eslint-plugin-sonarjs": "^0.25.1",
        "eslint-plugin-tailwindcss": "^3.17.4",
        "eslint-plugin-unicorn": "^51.0.1",
        "eslint-plugin-unused-imports": "^3.2.0",
        "eslint-plugin-vue": "^9.27.0",
        "eslint-processor-vue-blocks": "^0.1.2",
        "globals": "^14.0.0",
        "jsonc-eslint-parser": "^2.4.0",
        "local-pkg": "^0.5.0",
        "prettier": "^3.3.3",
        "prettier-plugin-astro": "^0.14.1",
        "prettier-plugin-toml": "^2.0.1",
        "prompts": "^2.4.2",
        "semver": "^7.6.3",
        "vue-eslint-parser": "^9.4.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.4.1",
        "@commitlint/config-conventional": "^19.4.1",
        "@kdt310722/tsconfig": "^1.0.0",
        "@swc/core": "^1.7.21",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^20.16.2",
        "@types/prompts": "^2.4.9",
        "eslint": "^8.57.0",
        "lint-staged": "^15.2.9",
        "np": "^10.0.7",
        "npm-check-updates": "^17.1.0",
        "only-allow": "^1.2.1",
        "rimraf": "^6.0.1",
        "simple-git-hooks": "^2.11.1",
        "tsup": "^8.2.4",
        "typescript": "^5.5.4"
    },
    "commitlint": {
        "extends": "@commitlint/config-conventional"
    },
    "simple-git-hooks": {
        "commit-msg": "npx --no -- commitlint --edit ${1}",
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
