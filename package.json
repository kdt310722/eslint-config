{
    "name": "@kdt310722/eslint-config",
    "type": "module",
    "version": "0.2.0",
    "packageManager": "pnpm@10.30.0",
    "description": "My personal ESLint config",
    "author": "Diep Dang <kdt310722@gmail.com>",
    "license": "MIT",
    "homepage": "https://github.com/kdt310722/eslint-config",
    "repository": "github:kdt310722/eslint-config",
    "bugs": {
        "email": "kdt310722@gmail.com",
        "url": "https://github.com/kdt310722/eslint-config/issues"
    },
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rimraf dist && tsup && tsc --project ./tsconfig.build.json",
        "release": "np --no-yarn --no-release-draft --yolo --message='chore: release v%s'",
        "up": "ncu -i",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "preinstall": "npx only-allow pnpm",
        "prepare": "simple-git-hooks && pnpm build",
        "prepublishOnly": "pnpm build"
    },
    "peerDependencies": {
        "eslint": ">=9.39.2"
    },
    "dependencies": {
        "@antfu/eslint-define-config": "1.23.0-2",
        "@antfu/install-pkg": "^1.1.0",
        "@eslint/js": "^9.39.2",
        "@stylistic/eslint-plugin": "^4.4.1",
        "@typescript-eslint/eslint-plugin": "^8.56.0",
        "@typescript-eslint/parser": "^8.56.0",
        "@typescript-eslint/utils": "^8.56.0",
        "@unocss/eslint-plugin": "^66.6.0",
        "astro-eslint-parser": "^1.3.0",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-merge-processors": "^2.0.0",
        "eslint-plugin-antfu": "^3.2.2",
        "eslint-plugin-astro": "^1.6.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-format": "^1.4.0",
        "eslint-plugin-import-x": "^4.16.1",
        "eslint-plugin-jsdoc": "^50.8.0",
        "eslint-plugin-jsonc": "^2.21.1",
        "eslint-plugin-markdown": "^5.1.0",
        "eslint-plugin-n": "^17.24.0",
        "eslint-plugin-perfectionist": "^4.15.1",
        "eslint-plugin-promise": "^7.2.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.5.0",
        "eslint-plugin-sonarjs": "^3.0.7",
        "eslint-plugin-tailwindcss": "4.0.0-beta.0",
        "eslint-plugin-unicorn": "^59.0.1",
        "eslint-plugin-unused-imports": "^4.4.1",
        "eslint-plugin-vue": "^10.8.0",
        "eslint-processor-vue-blocks": "^2.0.0",
        "globals": "^16.5.0",
        "jsonc-eslint-parser": "^2.4.2",
        "local-pkg": "^1.1.2",
        "prettier": "^3.8.1",
        "prettier-plugin-astro": "^0.14.1",
        "prettier-plugin-toml": "^2.0.6",
        "prompts": "^2.4.2",
        "semver": "^7.7.4",
        "vue-eslint-parser": "^10.4.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.4.1",
        "@commitlint/config-conventional": "^20.4.1",
        "@kdt310722/tsconfig": "^1.0.0",
        "@swc/core": "^1.15.11",
        "@types/node": "^24.10.13",
        "@types/prompts": "^2.4.9",
        "@types/semver": "^7.7.1",
        "eslint": "^9.39.2",
        "lint-staged": "^16.2.7",
        "np": "^11.0.2",
        "npm-check-updates": "^19.4.0",
        "only-allow": "^1.2.2",
        "rimraf": "^6.1.3",
        "simple-git-hooks": "^2.13.1",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3"
    },
    "commitlint": {
        "extends": "@commitlint/config-conventional"
    },
    "pnpm": {
        "peerDependencyRules": {
            "allowedVersions": {
                "eslint": "9"
            }
        },
        "onlyBuiltDependencies": [
            "@swc/core",
            "esbuild",
            "simple-git-hooks",
            "unrs-resolver"
        ]
    },
    "simple-git-hooks": {
        "commit-msg": "npx --no -- commitlint --edit ${1}",
        "pre-commit": "npx lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    }
}
